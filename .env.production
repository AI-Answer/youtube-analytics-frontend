# Production environment variables for Next.js frontend
# This file will be used during the Railway build process

# API URL - Railway backend service URL
# Update this with your actual Railway backend URL after backend deployment
NEXT_PUBLIC_API_URL=https://youtube-analytics-backend-production.up.railway.app

# App Configuration
NEXT_PUBLIC_APP_NAME=YouTube Analytics
NEXT_PUBLIC_APP_VERSION=1.0.0

# YouTube Configuration
NEXT_PUBLIC_YOUTUBE_CHANNEL_HANDLE=@SaminYasar_
NEXT_PUBLIC_YOUTUBE_CHANNEL_URL=https://www.youtube.com/@SaminYasar_

# Node environment
NODE_ENV=production

# Node version for Railway
NODE_VERSION=18.17.0

# Disable Next.js telemetry in production
NEXT_TELEMETRY_DISABLED=1

# Analytics (optional - leave empty for now)
NEXT_PUBLIC_GA_TRACKING_ID=
NEXT_PUBLIC_HOTJAR_ID=

# Railway-specific optimizations
NEXT_PUBLIC_VERCEL_ENV=production
